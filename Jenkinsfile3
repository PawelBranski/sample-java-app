pipeline {
  agent any
  stages {
    stage('SonarQube analysis') {
      steps {
        script {
          // requires SonarQube Scanner 2.8+
          scannerHome = tool 'sq1'
        }
        withSonarQubeEnv('sq1') {
          sh "${scannerHome}/bin/sonar-scanner"
        }
      }
    }
  }
}
